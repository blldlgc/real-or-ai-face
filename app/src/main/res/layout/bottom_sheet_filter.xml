<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtreleme Seçenekleri"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="16dp"/>

    <!-- Sonuç Filtresi -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonuç"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/resultFilterChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/allChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tümü"
            android:checkable="true"
            android:checked="true"
            style="@style/Widget.Material3.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/realChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REAL"
            android:checkable="true"
            style="@style/Widget.Material3.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fakeChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAKE"
            android:checkable="true"
            style="@style/Widget.Material3.Chip.Filter"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- Tarih Filtresi -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarih Aralığı"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/dateFilterChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/todayChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bugün"
            android:checkable="true"
            style="@style/Widget.Material3.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/weekChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bu Hafta"
            android:checkable="true"
            style="@style/Widget.Material3.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/monthChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bu Ay"
            android:checkable="true"
            style="@style/Widget.Material3.Chip.Filter"/>
    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearFiltersButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtreleri Temizle"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/applyFiltersButton"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uygula"/>
    </LinearLayout>

</LinearLayout> 